{
  "name": "root",
  "version": "0.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alibaba/x-render.git",
    "branch": "master",
    "platform": "github"
  },
  "workspaces": [
    "packages/*",
    "tools/schema-generator",
    "tools/form-render-excel"
  ],
  "scripts": {
    "build": "turbo run build",
    "changelog": "lerna-changelog",
    "clean": "lerna clean -y",
    "predeploy": "npm run build && npm run doc",
    "deploy": "gh-pages -d docs-dist",
    "dev": "set PORT=8080 && dumi dev",
    "doc": "dumi build",
    "format": "prettier -c --write \"docs/**/*\" \"packages/**/*\" \"tools/**/*\" \"widgets/**/*\"",
    "prepare": "dumi setup",
    "publish": "npm run build && lerna publish -m \"chore: publish\" --no-verify-access",
    "size": "ANALYZE=1 dumi build",
    "start": "npm run dev",
    "test": "vitest run",
    "test:clean": "vitest clean cache",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "resolutions": {
    "types-ramda": "0.29.4"
  },
  "devDependencies": {
    "@ant-design/icons": "^4.0.2",
    "@babel/core": "7.17.2",
    "@babel/plugin-transform-react-jsx": "^7.19.0",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@codemirror/lang-json": "^6.0.1",
    "@jest/types": "^27.5.1",
    "@monaco-editor/react": "^4.4.6",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.3",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/enzyme": "^3.10.11",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^27.0.3",
    "@types/lodash-es": "^4.17.6",
    "@uiw/react-codemirror": "^4.23.7",
    "@umijs/plugin-esbuild": "1.x",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.0.5",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/coverage-c8": "^0.25.8",
    "@vitest/ui": "^0.25.7",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.7",
    "antd": "^5.x",
    "antd-mobile": "5.x",
    "babel-jest": "^27.4.4",
    "babel-plugin-import": "^1.13.0",
    "babel-plugin-no-debugger": "^0.0.1",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "chart-render": "^0.1.9",
    "cross-env": "^7.0.3",
    "dumi": "2.4.17",
    "dumi-theme-mobile": "^2.0.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "father-build": "^1.17.2",
    "fetch-jsonp": "^1.1.3",
    "formRenderV1": "npm:form-render@^1.4.13",
    "gh-pages": "^3.0.0",
    "happy-dom": "^8.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.4",
    "jsdom": "^19.0.0",
    "jsdom-global": "^3.0.2",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.21",
    "monaco-editor-webpack-plugin": "^4.1.1",
    "prettier": "^2.6.0",
    "prettier-plugin-packagejson": "^2.2.16",
    "prismjs": "^1.27.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-monaco-editor": "^0.44.0",
    "react-simple-code-editor": "^0.11.0",
    "react-test-renderer": "^17.0.2",
    "tinycolor2": "^1.6.0",
    "translate-google": "^1.5.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "turbo": "^1.3.1",
    "typeit-react": "^2.6.4",
    "typescript": "^5.2.2",
    "vite": "^3.2.5",
    "vitest": "^0.25.6",
    "yorkie": "^2.0.0",
    "braft-editor": "^2.3.9"
  }
}
